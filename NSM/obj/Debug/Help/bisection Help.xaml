<Page
    x:Class="NSM.Help.bisection_Help"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NSM.Help"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Margin="0,-26.667,0,-0.333">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Help" FontSize="45" HorizontalAlignment="Left" VerticalAlignment="Bottom" />
        <TextBlock Grid.Row="1" Name="Method" FontSize="35" HorizontalAlignment="Center" VerticalAlignment="Bottom" />
        <Line Name="line6" Grid.Row="2" Stroke="White" StrokeThickness="2" X2="600" />

        <ScrollViewer Grid.Row="3" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Grid Grid.Row="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="140"/>
                    <RowDefinition Height="140" />
                    <RowDefinition Height="200"/>
                    <RowDefinition Height="160"/>
                    <RowDefinition Height="160"/>
                    <RowDefinition Height="150"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" FontSize="20" >
                    <Run Text="Equations ( Example) : "/>
        	        <LineBreak/>
                    <LineBreak/>
        	        <Run Text="               3x² - cosx + 3 = 0 "/>
                    <LineBreak/>
                    <LineBreak/>
        	        <Run Text="Enter Total Terms : "/>
                </TextBlock>
                <Line Name="line1" Grid.Row="0" Margin="0,30,0,0" Stroke="White" StrokeThickness="2" X2="200" />
                <Line Name="line2" Grid.Row="0" Margin="0,125,0,0" Stroke="White" StrokeThickness="2" X2="180" />

                <TextBlock Grid.Row="1" FontSize="20" >
                    <Run Text="In the example total there are 3 terms."/>
                    <LineBreak/>
                    <LineBreak/>
        	        <Run Text="       First Term is 3x²"/>
                    <LineBreak/>
        	        <Run Text="       Second Term is -cosx"/>
                    <LineBreak/>
        	        <Run Text="       Third Term is 3"/>
                </TextBlock>

                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="1" Text="Coefficiant" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="2" Text="X" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="3" Text="Power" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Row="1" Text="Term 1 :" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Row="2" Text="Term 2 :" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Row="3" Text="Term 3 :" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    
                    <TextBox Text="3" Grid.Column="1" Grid.Row="1" Width="50" />
                    <TextBox Text="-1" Grid.Column="1" Grid.Row="2" Width="50"  />
                    <TextBox Text="3" Grid.Column="1" Grid.Row="3" Width="50"  />
                    <TextBox Text="x" Grid.Column="2" Grid.Row="1" Width="70"  />
                    <TextBox Text="cosx" Grid.Column="2" Grid.Row="2" Width="70"  />
                    <TextBox Text="1" Grid.Column="2" Grid.Row="3" Width="70"  />
                    <TextBox Text="2" Grid.Column="3" Grid.Row="1" Width="50"  />
                    <TextBox Text="1" Grid.Column="3" Grid.Row="2" Width="50"  />
                    <TextBox Text="1" Grid.Column="3" Grid.Row="3" Width="50"  />

                    <TextBlock Text="+" Grid.Row="1" Grid.Column="4" FontSize="40" HorizontalAlignment="Left" VerticalAlignment="Center" />
                    <TextBlock Text="+" Grid.Row="2" Grid.Column="4" FontSize="40" HorizontalAlignment="Left" VerticalAlignment="Center" />
                    <TextBlock Text="+" Grid.Row="3" Grid.Column="4" FontSize="40" HorizontalAlignment="Left" VerticalAlignment="Center" />
                    
                    
                </Grid>

                <TextBlock Grid.Row="3" FontSize="20" >
                   <Run Text="Supported Differatiations  : "/>
                   <LineBreak/>
                   <LineBreak/>
        	       <Run Text=" 1) sinx "/>
        	       <LineBreak/>
                   <Run Text=" 2) cosx"/>
                   <LineBreak/>
        	       <Run Text=" 3) x terms with power"/>
                 </TextBlock>

                <Line Name="line3" Grid.Row="3" Margin="0,30,0,0" Stroke="White" StrokeThickness="2" X2="260" />



                <TextBlock Grid.Row="4" FontSize="20" >
                   <Run Text="Fix Interation : "/>
                   <LineBreak/>
                   <LineBreak/>
        	       <Run Text="the fix interation box is provide the fix"/>
        	       <LineBreak/>
                   <Run Text="interation in the calculation."/>
                   <LineBreak/>
        	       <Run Text="If you not select the interation so the answer"/>
                   <LineBreak/>
        	       <Run Text="is the last to iteration that are matched."/>
                </TextBlock>

                <Line Name="line4" Grid.Row="4" Margin="0,30,0,0" Stroke="White" StrokeThickness="2" X2="150" />


                <TextBlock Grid.Row="5" FontSize="20" >
            <Run Text="Fix Decimals : "/>
        	<LineBreak/>
            <LineBreak/>
        	<Run Text="The fix decimal box is provide the fix"/>
        	<LineBreak/>
        	<Run Text="decimal places in the calculation."/>
            <LineBreak/>
        	<Run Text="This is necessory to add the values."/>
                </TextBlock>

                <Line Name="line5" Grid.Row="5" Margin="0,30,0,0" Stroke="White" StrokeThickness="2" X2="150" />

                <TextBlock Grid.Row="6" FontSize="20" >
                    <Run Text="Put all the values is textbox and"/>
        	        <LineBreak/>
        	        <Run Text="hit calculate button for answer."/>
                </TextBlock>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>

